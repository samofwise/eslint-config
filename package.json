{
  "name": "@samhenrytech/eslint-config",
  "version": "1.0.5",
  "description": "Industry-standard ESLint configuration with TypeScript, React, and Prettier support",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./.prettierrc.base.ts": {
      "types": "./dist/.prettierrc.base.d.ts",
      "default": "./dist/.prettierrc.base.js"
    },
    "./tsconfig.base.json": "./tsconfig.base.json"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    ".prettierrc.base.ts",
    "tsconfig.base.json",
    "README.md"
  ],
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript",
    "react",
    "prettier"
  ],
  "author": "samhenrytech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samhenrytech/eslint-config.git"
  },
  "scripts": {
    "build": "tsc",
    "version:increment": "npm version patch",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "prepublishOnly": "npm run build && npm run version:increment"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "typescript": ">=4.0.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.0.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-sql": "^0.19.2",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript": "^5.6.3"
  }
}
